{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2018",          // <-- change this from ES6 to ES2018
    "lib": ["DOM", "ES2018"],   // <-- add this line to enable ES2018 libs
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}